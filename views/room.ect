<html>
<head lang="jp">
  <meta charset="UTF-8">

  <title>Saider</title>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="header">
    <span class="room">
      Saider
    </span>
    <form onsubmit="$('#user-name').blur(); return false;">
      <input id="user-name" type="text" value="ななし" onblur="changeUserName();">
    </form>
    <div id="changed">変更完了</div>
  </div>
  <div class="contents">
    <div id="result-area">
      <% for result in @results : %>
        <div class="result">
          <label><%- result.name %></label>
          <p><%- result.text %></p>
        </div>
      <% end %>
    </div>
    <div id="memo-area">
      <% for memo_id of @memos : %>
        <div class="memo"  memo-id="<%- memo_id %>" data-container="body" data-toggle="popover" data-trigger="hover" data-html="true" data-content="<%- @memos[memo_id].body %>"><%- @memos[memo_id].title %></div>
      <% end %>
    </div>
    <div id="map-area">
      <img id="map-img" src="<%- @map %>">
    </div>
  </div>

  <div class="toolbar">
    <div id="dice-tool">
      <form onsubmit="rollDice(); return false;">
        <input id="dice-input" placeholder="Dice roll">
      </form>
    </div>
    <div id="memo-tool">
      <button id="add-memo" class="btn btn-default" onclick="showMemoModal();">+</button>
    </div>
    <div id="map-tool">
      <button id="change-map" class="btn btn-default" onclick="showMapModal();">マップを変更</button>
    </div>
  </div>

  <div class="modal fade" id="modal-memo" tabindex="-1" role="dialog" aria-labelledby="modal-memo-label">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="modal-memo-label">共有メモ</h4>
        </div>
        <form onsubmit="sendMemo(); return false;">
          <div class="modal-body">
            <div class="form-group">
              <label for="memo-title">タイトル</label>
              <input id="memo-title" class="form-control" type="text">
            </div>
            <div class="form-group">
              <label for="memo-body">本文</label>
              <textarea id="memo-body" class="form-control" rows="8"></textarea>
            </div>
          </div>
          <div class="modal-footer">
            <!-- <a class="btn btn-danger pull-left" data-dismiss="modal">削除</a> -->
            <a class="btn btn-default" data-dismiss="modal">キャンセル</a>
            <button class="btn btn-primary" type="submit">変更</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="modal fade" id="modal-map" tabindex="-1" role="dialog" aria-labelledby="modal-map-label">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="modal-map-label">マップ変更</h4>
        </div>
        <form onsubmit="sendMapUrl(); return false;">
          <div class="modal-body">
            <div class="form-group">
              <label for="map-url">マップ画像画像URL</label>
              <input type="text" class="form-control" id="map-url" name="map-url">
            </div>
          </div>
          <div class="modal-footer">
            <a class="btn btn-default" data-dismiss="modal">キャンセル</a>
            <button class="btn btn-primary" type="submit">変更</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    room_id = "<%- @room_id %>";
  </script>
  <script src="/js/jquery-2.2.4.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/dice.js"></script>
  <script src="/js/script.js"></script>
</body>
</html>

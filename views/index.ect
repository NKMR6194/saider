<html>
<head lang="jp">
  <meta charset="UTF-8">

  <title>Saider</title>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="header">
    <span class="room">
      Saider
    </span>
    <button class="btn btn-default btn-header pull-right" onclick="$('#modal-join').modal('show');">
      ルームを作成
    </button>
  </div>
  <div class="room-list">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div>
          <div class="list-group">
            <% for room_id of @rooms : %>
              <a class="list-group-item" href="./<%- room_id %>"><%- @rooms[room_id] %></a>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>

  <div class="modal fade" id="modal-join" tabindex="-1" role="dialog" aria-labelledby="modal-join-label">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="modal-join-label">ルームを作成</h4>
        </div>
        <div class="modal-body">
          <form action="./create-room" method="post">
            <div class="form-group">
              <label for="room-name">ルーム名</label>
              <input type="text" class="form-control" name="room-name">
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button class="btn btn-default" data-dismiss="modal">キャンセル</button>
          <button class="btn btn-primary" type="submit">作成</button>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/jquery-2.2.4.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
</body>
</html>
